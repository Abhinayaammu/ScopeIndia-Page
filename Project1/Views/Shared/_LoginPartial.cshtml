@if(Context.User.Identity.Name != null)
{
	<form asp-controller="Home" asp-action="LogOut" method="post" id="logoutForm" class="navbar">
		<ul class="nav navbar-nav navbar-right">
		<li>
			HELLO @Context.User.Identity.Name!
		</li>
		<li>
			<button type="submit" class="btn btn-link text-dark navbar-btn navbar-link">LogOut</button>
		</li>
		</ul>
	</form>
	
}
else
{
	<ul class="nav navbar-nav navbar-right">
		<li><a class="nav-link text-light" asp-controller="Home"asp-action="Registration">Register</a></li>
		<li><a class="nav-link text-light" asp-controller="Home" asp-action="Login">Log in</a></li>
	</ul>
}